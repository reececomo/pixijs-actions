{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es6",
    "allowJs": false,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "skipLibCheck": true
  },
  "include": ["src/*", "src/**/*", "src/**/**/*"],
  "exclude": ["src/__tests__/**/*"]
}